<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <listener>
        <listener-class>listeners.AppContextListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controllers.LoginServlet</servlet-class>
        <init-param>
            <param-name>username</param-name>
            <param-value>HevAbi</param-value>
        </init-param>
        <init-param>
            <param-name>password</param-name>
            <param-value>HevAbi123</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>VaccineServlet</servlet-name>
        <servlet-class>controllers.VaccineServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginModel</servlet-name>
        <url-pattern>/LoginModel</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>controllers.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginModel</servlet-name>
        <servlet-class>model.LoginModel</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AppointmentServlet</servlet-name>
        <servlet-class>controllers.AppointmentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GeneralErrorServlet</servlet-name>
        <servlet-class>GeneralErrorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GuestServlet</servlet-name>
        <servlet-class>controllers.GuestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GuestServlet</servlet-name>
        <url-pattern>/GuestServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AppointmentServlet</servlet-name>
        <url-pattern>/AppointmentServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GeneralErrorServlet</servlet-name>
        <url-pattern>/GeneralErrorServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VaccineServlet</servlet-name>
        <url-pattern>/VaccineServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <error-code>404</error-code>
        <location>/error404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/error500.jsp</location>
    </error-page>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>login.jsp</welcome-file>
        <welcome-file>guest.jsp</welcome-file>
    </welcome-file-list>
</web-app>
